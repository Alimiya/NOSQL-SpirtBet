<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Profile</title>
    <link rel="stylesheet" href="/css/welcome.css" type="text/css">
    <link rel="java" href="/css/master.css">
</head>
<body>
<div class="logo-svg2">
    <svg width="150" height="75" xmlns="http://www.w3.org/2000/svg" xmlns:svg="http://www.w3.org/2000/svg">
        <g class="layer">
            <rect fill="#cc3737" height="75" id="svg_1" stroke="#ffffff" stroke-dasharray="null" stroke-linecap="null" stroke-linejoin="null" stroke-width="null" width="150" x="0" y="0"/>
            <text fill="#ffffff" font-family="serif" font-size="12" id="svg_4" stroke="#ffffff" stroke-dasharray="null" stroke-linecap="null" stroke-linejoin="null" stroke-width="0" text-anchor="middle" transform="matrix(2.83375 0 0 2.51585 -24.1497 -215.334)" x="30" xml:space="preserve" y="110">Spirtbet</text>
        </g>
    </svg>
</div>
<div class="menu">
    <nav class="navMenu">
        <a href="/main">Home</a>
        <a href="/stands">Stands</a>
        <a href="/profile">Profile</a>
        <a href="/bets">Bets</a>
        <a href="/about">About</a>
        <a href="/chat">Chat</a>
        <a href="/forecasts/indexuser">Forecast</a>
        <a href="/logout">Logout</a>
    </nav>
</div>
<br><br>
<div class="greetings">
    <p>Profile</p>
</div>
<br><br>
<div class="profile-box" style="text-align: center">
    <div class="greetings">
        <p>User information</p>
    </div>
    <hr>
    <h1 style="padding: 10px">Name: <%=uname%></h1>
    <h1 style="padding: 10px">Surname: <%=surname%></h1>
    <h1 style="padding: 10px">Email: <%=email%></h1>
    <h1 style="padding: 10px">Balance: <%=balance%> USD</h1>
    <div class="sortname">
        <button type="button" id="update">Update user</button>
        <br>
    </div>
    <div class="sortname">
        <button type="button" id="mybets">    My bets    </button>
        <br>
    </div>
    <div class="sortname1">
        <form action="/pay" method="post">
            <input type="submit" value="Top up">
        </form>
        <br>
    </div>
    <div id="updatemodal" class="modal">
        <div class="modal-content">
            <span class="close1">&times;</span>
            <h1>Update user</h1>
            <p>Enter the new information to update the user</p>
            <hr>
            <div class="deleteform">
                <form action="/updateprofile" method="post">
                    <div class="input-container ic2">
                        <input name="firstname" id="firstname" class="input" type="text" placeholder=" " />
                        <div class="cut cut-short"></div>
                        <label for="firstname" class="placeholder">Name</label>
                    </div>
                    <div class="input-container ic1">
                        <input name="lastname" id="lastname" class="input" type="text" placeholder=" " />
                        <div class="cut"></div>
                        <label for="lastname" class="placeholder">Surname</label>
                    </div>
                    <div class="input-container ic2">
                        <input name="email" id="email" class="input" type="text" placeholder=" " />
                        <div class="cut cut-short"></div>
                        <label for="email" class="placeholder">Email</label>
                    </div>
                    <button type="text" class="submit">Update</button>
                </form>
            </div>
        </div>
    </div>
    <div id="betsmodal" class="modal">
        <div class="modal-content">
            <span class="close2">&times;</span>
            <h1>Bets</h1>
            <p>The history of your bets</p>

<div class="users">
    <table class="table">
        <tr>
            <th class="table__heading">Match ID</th>
            <th class="table__heading">Username</th>
            <th class="table__heading">Bet</th>
            <th class="table__heading">Amount</th>
            <th class="table__heading">Coefficient</th>
            <th class="table__heading">Status</th>
        </tr>
        <%betsinfo.forEach(function(bet) { %>
        <tbody>
        <tr>
            <td><%=bet.matchid %></td>
            <td><%=bet.login %></td>
            <td><%=bet.bet %></td>
            <td><%=bet.amount %></td>
            <td><%=bet.coef %></td>
            <td><%=bet.status %></td>
        </tr>
        </tbody>
        <% }) %>
    </table>
</div>

            <hr>
        </div>
    </div>
</div>
</div>
<script>var update = document.getElementById("updatemodal");
var bets = document.getElementById("betsmodal");
    var updatebtn = document.getElementById("update");
    var betsbtn = document.getElementById("mybets");
    var span = document.getElementsByClassName("close1")[0];
    var span2 = document.getElementsByClassName("close2")[0];
    updatebtn.onclick = function() {
        update.style.display = "block";
    }
    betsbtn.onclick = function() {
        bets.style.display = "block";
    }
    span2.onclick = function() {
        bets.style.display = "none";
    }
    span.onclick = function() {
        update.style.display = "none";
    }


    window.onclick = function(event) {
        if (event.target == update) {
            update.style.display = "none";
        }
    }
    window.onclick = function(event) {
        if (event.target == bets) {
            bets.style.display = "none";
        }
    }

</script>
</body>
</html>
